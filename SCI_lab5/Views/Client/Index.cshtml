@using SCI_lab5.Helpers
@model SCI_lab5.ViewModels.ClientViewModel
@addTagHelper "SCI_lab5.Helpers.PageLinkTagHelper, SCI_lab5"
@addTagHelper "SCI_lab5.Helpers.TableHelper, SCI_lab5"
@{
    ViewData["Title"] = "Clients";
}

<style type="text/css">
    th, td {
        padding-right: 15px;
    }
</style>

<hr style="border-top: 3px double #8c8b8b;" />
<div>
    <form asp-action="Filter" class="form-inline" method="post" style=" width:600px;margin:0px auto;">
        Name: @Html.TextBox("Name", Model.ClientFIlter.Name)
        &nbsp; &nbsp; &nbsp; &nbsp; Birthyear: @Html.TextBox("Birthyear", Model.ClientFIlter.Birthyear)
        &nbsp; &nbsp; &nbsp; &nbsp; <input type="submit" value="Find" />
    </form>
</div>
<hr style="border-top: 3px double #8c8b8b;" />

<table style="margin:0px auto; width:500px">
    <caption>Clients</caption>
    <tr>
        <th>
            <a asp-action="Sort" asp-route-sortState=@Model.ClientSort.Models.NameSort>
                Name
            </a>
        </th>
        <th>
            <a asp-action="Sort" asp-route-sortState=@Model.ClientSort.Models.BirthdaySort>
                Birthday
            </a>
        </th>
        <th>
            <a asp-action="Sort" asp-route-sortState=@Model.ClientSort.Models.PhoneSort>
                Phone number
            </a>
        </th>
        <th>
            <a asp-action="Sort" asp-route-sortState=@Model.ClientSort.Models.AddressSort>
                Address
            </a>
        </th>

    </tr>
    @Html.CreateClientsList(Model.Clients)



</table>

<a asp-action="Create" class="btn btn-sm btn-primary" style="float: right; margin-right: 200px">Add</a>
<page-link page-model="@Model.PageViewModel" page-action="Index"></page-link>


<hr style="border-top: 3px double #8c8b8b;" />

