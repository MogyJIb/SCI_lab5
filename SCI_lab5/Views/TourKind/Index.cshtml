@using SCI_lab5.Helpers
@model SCI_lab5.ViewModels.TourKindViewModel
@addTagHelper "SCI_lab5.Helpers.PageLinkTagHelper, SCI_lab5"
@addTagHelper "SCI_lab5.Helpers.TableHelter, SCI_lab5"
@{
    ViewData["Title"] = "Tour Kinds";
}

<style type="text/css">
    th, td {
        padding-right: 15px;
    }
</style>

<hr style="border-top: 3px double #8c8b8b;" />
<div>
    <form asp-action="Filter" class="form-inline" method="post" style=" width:300px;margin:0px auto;">
        Name: @Html.TextBox("Name", Model.TourKindFilter.Name)
        &nbsp; &nbsp; &nbsp; &nbsp; <input type="submit" value="Find" />
    </form>

</div>
<div style="clear:both"></div>
<hr style="border-top: 3px double #8c8b8b;" />

<table style="margin:0px auto; width:500px">
    <caption>Tour kinds</caption>
    <tr>
        <th>
            <a asp-action="Sort" asp-route-sortState=@Model.TourKindSort.Models.NameSort>
                Name
            </a>
        </th>
        <th>
            <a asp-action="Sort" asp-route-sortState=@Model.TourKindSort.Models.DescriptionSort>
                Description
            </a>
        </th>
        <th>
            <a asp-action="Sort" asp-route-sortState=@Model.TourKindSort.Models.ConstraintsSort>
                Constraints
            </a>
        </th>
    </tr>
    @Html.CreateTourKindsList(Model.TourKinds)

</table>

<a asp-action="Create" class="btn btn-sm btn-primary" style="float: right; margin-right: 200px">Add</a>
<page-link page-model="@Model.PageViewModel" page-action="Index"></page-link>

<hr style="border-top: 3px double #8c8b8b;" />

